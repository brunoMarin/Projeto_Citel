@{
    ViewBag.Title = "Produto";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong></strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">

        </div>
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Filtros</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <div class="form-inline">
                            <div class="row">
                                <div class="form-group">
                                    <label for="ViewConsultaCategoria" data-toggle="tooltip" data-placement="top" title="Produto">Categoria:&nbsp;</label>
                                    <select id="ViewConsultaCategoria" class="form-control"></select>
                                </div>
                                <div class="form-group pull-right">
                                    <button onclick="atualizarDataTableFiltro();" class="btn btn-primary" type="button">Pesquisar</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Cadastros produto</h5>
                        <div class="ibox-tools">
                            <button onclick="abrirModalCadastrarProduto('I','','','','','','0')" class="btn btn-sm btn-lg texto_escuro text-center btn-warning" data-toggle="tooltip" data-placement="top" title="Novo Lançamento"><strong><i class="fa fa-plus"></i> Novo</strong></button>
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table id="tabProduto" class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th class="text-left">ID Produto</th>
                                        <th class="text-left">ID Categoria</th>
                                        <th class="text-center">Categoria</th>
                                        <th class="text-center">Nome Produto</th>
                                        <th class="text-center">Preço</th>
                                        <th class="text-center">Característica</th>
                                        <th class="text-center"></th>
                                        <th class="text-center"></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@*//ESSE CAMPO USO COMO VARIÁVEL, SÓ PRA SABER QUAL É O REGISTRO SELECIONADO NA EXCLUSÃO.*@
<div class="row">
    <div class="form-group invisible">
        <input id="txtProdutoCodigoConsultar" type="text" class="form-control form-control rounded-0 col-6 invisible" hidden>
    </div>
</div>

<!--MODAL PARA CADASTRAR PRODUTO-->
<div class="modal fade" id="ViewCadastrarProdutoMdl" tabindex="-1" role="dialog" aria-labelledby="ViewCadastrarProdutoMdlLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title text-white"><i class="fa fa-plus"></i> Cadastro de Produto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <label for="txtProdutoDescricao" data-toggle="tooltip" data-placement="top" title="Descrição">Descrição<strong class="text-danger">*</strong></label>
                            <input id="txtProdutoDescricao" type="text" class="form-control" maxlength="50" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-lg-9">
                            <label for="cbxCategoria" data-toggle="tooltip" data-placement="top" title="Categoria">Categoria <strong class="text-danger">*</strong></label>
                            <select id="cbxCategoria" class="form-control" required></select>
                        </div>
                        <div class="form-group col-lg-3">
                            <label for="txtValor" data-toggle="tooltip" data-placement="top" title="Valor">Valor <strong class="text-danger">*</strong></label>
                            <input id="txtValor" type="text" class="form-control" maxlength="10" required value="0" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-lg-12">
                            <label for="txtProdutoCaracteristica" data-toggle="tooltip" data-placement="top" title="Característica">Característica<strong class="text-danger">*</strong></label>
                            <input id="txtProdutoCaracteristica" type="text" class="form-control" maxlength="200" required />
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <div id="divRodapeCadastroProduto" class="row">
                    <div class="form-group">
                        <div class="form-group col-lg-6">
                            <div id="divExcluirCadastroProduto"></div>
                        </div>
                        <div class="form-group col-lg-6">
                            <button onclick="inserirCadastroProduto();" type="submit" class="btn btn-primary block full-width m-b"><i class="fa fa-save"></i> Salvar</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
