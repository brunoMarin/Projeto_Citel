@{
    ViewBag.Title = "Categoria";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="active">
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">

        </div>
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Cadastros categoria</h5>
                        <div class="ibox-tools">
                            <button onclick="abrirModalCadastrarCategoria('I','','','0')" class="btn  btn-sm btn-lg texto_escuro text-center btn-warning" data-toggle="tooltip" data-placement="top" title="Novo Lançamento"><strong><i class="fa fa-plus"></i> Novo</strong></button>
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table id="tabCategoria" class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th class="text-left">ID</th>
                                        <th class="text-center">Descrição</th>
                                        <th class="text-center"></th>
                                        <th class="text-center"></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@*//ESSE CAMPO USO COMO VARIÁVEL, SÓ PRA SABER QUAL É O REGISTRO SELECIONADO NA EXCLUSÃO.
    //DEIXO ELE OCULTO, POIS USUÁRIO NÃO PRECISA SABER. DEIXO NO FINAL PRA NÃO PEGAR ESPAÇO DO INICIO DA PÁGINA*@
<div class="row">
    <div class="form-group invisible">
        <input id="txtCategoriaCodigoConsultar" type="text" class="form-control form-control rounded-0 col-6 invisible" hidden>
    </div>
</div>

<!--MODAL PARA CADASTRAR CATEGORIA-->
<div class="modal fade" id="ViewCadastrarCategoriaMdl" tabindex="-1" role="dialog" aria-labelledby="ViewCadastrarCategoriaMdlLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title text-white"><i class="fa fa-plus"></i> Cadastro de categoria</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <label for="txtCategoriaDescricao" data-toggle="tooltip" data-placement="top" title="Descrição">Descrição<strong class="text-danger">*</strong></label>
                            <input id="txtCategoriaDescricao" type="text" class="form-control" maxlength="30" required />
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <div id="divRodapeCadastroCategoria" class="row">
                    <div class="form-group">
                        <div class="form-group col-lg-6">
                            <div id="divExcluirCadastroCategoria">
                                @* <button id="btnExcluirAgendamentoSalaReuniao" onclick="excluirCategoria();" type="submit" class="btn btn-danger block full-width m-b"><i class="fa fa-trash"></i> Excluir</button>*@
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <button onclick="inserirCadastroCategoria();" type="submit" class="btn btn-primary block full-width m-b"><i class="fa fa-save"></i> Salvar</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>